{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es6", "es2017", "esnext.asynciterable"],
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "checkJs": false,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules", "dist"],
  "typeRoots": ["./node_modules/@types", "./types"]
}
