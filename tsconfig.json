{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist",
    "rootDir": "./",
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "moduleResolution": "Node"
    // "resolveJsonModule": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "./node_modules", "./node_modules/*"]
}
